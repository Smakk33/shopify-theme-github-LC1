<div class="eyeliner-section-P3" style="background-color: {{ section.settings.background_color }};">
  <!-- Version Mobile (Originale) -->
  <div class="eyeliner-mobile-container-P3">
    {%- if section.settings.heading != blank -%}
      <h2 class="eyeliner-heading-P3">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    {%- if section.settings.subheading != blank -%}
      <h3 class="eyeliner-subheading-P3">{{ section.settings.subheading }}</h3>
    {%- endif -%}
    
    {%- if section.settings.intro_text != blank -%}
      <div class="eyeliner-intro-P3">{{ section.settings.intro_text }}</div>
    {%- endif -%}
    
    <div class="eyeliner-problems-P3">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'problem' -%}
            <div class="eyeliner-problem-item-P3" {{ block.shopify_attributes }}>
              <div class="eyeliner-problem-icon-P3">
                <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.title }}" loading="lazy" width="24" height="24">
              </div>
              <div class="eyeliner-problem-content-P3">
                <h4 class="eyeliner-problem-title-P3">{{ block.settings.title }}</h4>
                <p class="eyeliner-problem-text-P3">{{ block.settings.description }}</p>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    {%- if section.settings.conclusion_text_1 != blank -%}
      <div class="eyeliner-conclusion-P3">{{ section.settings.conclusion_text_1 }}</div>
    {%- endif -%}
    
    {%- if section.settings.conclusion_text_2 != blank -%}
      <div class="eyeliner-conclusion-P3">{{ section.settings.conclusion_text_2 }}</div>
    {%- endif -%}
    
    {%- if section.settings.final_text != blank -%}
      <p class="eyeliner-final-text-P3">{{ section.settings.final_text }}</p>
    {%- endif -%}
    
    {%- if section.settings.button_text != blank -%}
      <div class="eyeliner-button-container-P3">
        <a href="{{ section.settings.button_url }}" class="eyeliner-button-P3" style="background-color: {{ section.settings.button_color }};">
          {{ section.settings.button_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
  
  <!-- Version Desktop (Nouvelle) -->
  <div class="eyeliner-desktop-container-P3">
    <div class="eyeliner-desktop-header-P3">
      <div class="eyeliner-desktop-text-column-P3">
        <h2 class="eyeliner-desktop-heading-P3">{{ section.settings.heading }}</h2>
        <h3 class="eyeliner-desktop-subheading-P3">{{ section.settings.subheading }}</h3>
        <div class="eyeliner-desktop-intro-P3">{{ section.settings.intro_text }}</div>
      </div>
      
      <div class="eyeliner-desktop-image-column-P3">
        <div class="eyeliner-desktop-image-container-P3">
          <img 
            src="https://cdn.shopify.com/s/files/1/0850/5956/7882/files/image_13.webp?v=1741977873" 
            alt="Démonstration eyeliner" 
            class="eyeliner-desktop-image-P3"
            loading="lazy"
          >
          <div class="eyeliner-desktop-stats-overlay-P3">
            <p>8 femmes sur 10 affirment que leur eyeliner marque leurs ridules et ne tient plus toute la journée.</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="eyeliner-desktop-problems-grid-P3">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'problem' -%}
            <div class="eyeliner-desktop-problem-item-P3" {{ block.shopify_attributes }}>
              <div class="eyeliner-desktop-problem-icon-P3">
                <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.title }}" loading="lazy" width="60" height="60">
              </div>
              <div class="eyeliner-desktop-problem-content-P3">
                <h4 class="eyeliner-desktop-problem-title-P3">{{ block.settings.title }}</h4>
                <p class="eyeliner-desktop-problem-text-P3">{{ block.settings.description }}</p>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    <div class="eyeliner-desktop-conclusion-container-P3">
      {%- if section.settings.conclusion_text_1 != blank -%}
        <div class="eyeliner-desktop-conclusion-P3">{{ section.settings.conclusion_text_1 }}</div>
      {%- endif -%}
      
      {%- if section.settings.conclusion_text_2 != blank -%}
        <div class="eyeliner-desktop-conclusion-P3">{{ section.settings.conclusion_text_2 }}</div>
      {%- endif -%}
      
      {%- if section.settings.final_text != blank -%}
        <p class="eyeliner-desktop-final-text-P3">{{ section.settings.final_text }}</p>
      {%- endif -%}
      
      {%- if section.settings.button_text != blank -%}
        <div class="eyeliner-desktop-button-container-P3">
          <a href="{{ section.settings.button_url }}" class="eyeliner-desktop-button-P3" style="background-color: {{ section.settings.button_color }};">
            {{ section.settings.button_text }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

