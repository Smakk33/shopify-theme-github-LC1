<style>
  .eyeliner-landing {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    margin-bottom: 15px;
  }

  .eyeliner-landing__title {
    font-size: 40px;
    color: #2D2640;
    line-height: 1;
    margin-bottom: 30px;
    font-weight: 600;
  }

  .eyeliner-landing__highlight {
    color: #a58fcb;
  }

  .eyeliner-landing__intro {
        font-size: 18px;
    color: #2D2640;
    line-height: 1.3;
    margin-bottom: 30px;
    text-align: center;
  }

.eyeliner-landing__hero-image {

box-shadow: 1px 1px 10px #dddddd;
border: 2px solid #342C40;
  
}
  

  .eyeliner-landing__product-image {
    width: 100%;
    max-width: none;
    display: none;
  }

  .eyeliner-landing__subtitle {
    margin: 100px 0;
    font-size: 48px;
    color: #2D2640;
    line-height: 1.2;
    margin-bottom: 30px;
    font-weight: 600;
  }

  .eyeliner-landing__benefits {
    display: grid;
    gap: 30px;
    margin-top: 30px;
  }

  .eyeliner-landing__benefit {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: 20px;
    align-items: center;
  }

  .eyeliner-landing__benefit-icon {
    width: 80px;
    height: 80px;
  }

  .eyeliner-landing__benefit-title {
    font-size: 20px;
    color: #2D2640;
    margin-bottom: 2px;
    font-weight: 600;
  }

  .eyeliner-landing__benefit-text {
    font-size: 16px;
    color: #2D2640;
      line-height: 1.2;
  }

  @media (max-width: 768px) {

.eyeliner-landing {
     margin-top: 5px ;
  }

    
    .eyeliner-landing__title {
      font-size: 35px;
        font-weight: 600;
              margin-top: 25px;
        color: #342c40;
    }

  .eyeliner-landing__product-image {
    width: 100%;
    max-width: 600px;
    display: flex;
  }


    .eyeliner-landing__benefits-image {

display: none

      
    }
    

    .eyeliner-landing__intro {
     font-size: 16px;
      text-align: left;
    }

    .eyeliner-landing__subtitle {
     font-size: 35px;
          margin: 0px 0;
        font-weight: 600;
        color: #342c40;
    }

    .eyeliner-landing__benefit {
      grid-template-columns: 60px 1fr;
    }

    .eyeliner-landing__benefit-icon {
      width: 70px;
      height: 70px;
    }

    .eyeliner-landing__benefit-title {
       font-size: 15px;
        font-weight: bold;
    }

    .eyeliner-landing__benefit-text {
      font-size: 14px;
    }
  }


 @media (max-width: 399px) {

    .eyeliner-landing__title {
        font-size: 30px;
        font-weight: 600;
        color: #342c40;
    }

       .eyeliner-landing__subtitle {
        font-size: 30px;
        font-weight: 600;
        color: #342c40;
    }

    
}

@media (min-width: 769px) {
  .eyeliner-landing {
    padding: 40px;
     margin-top: 90px ;
  }
  
  .eyeliner-landing__hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
    margin-bottom: 80px;
  }
  
  .eyeliner-landing__hero-image {
    width: 100%;
    border-radius: 4px;
    overflow: hidden;
  }
  
  .eyeliner-landing__content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  
  .eyeliner-landing__title {
    text-align: left;
    margin-bottom: 20px;
  }
  
  .eyeliner-landing__intro {
    text-align: left;
    margin-bottom: 30px;
  }
  
  .eyeliner-landing__product-image {
    display: block;
  }
  
  .eyeliner-landing__subtitle {
    text-align: center;
    width: 100%;
    margin: 80px 0 60px;
  }
  
  .eyeliner-landing__benefits-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }
  
  .eyeliner-landing__benefits {
    display: grid;
    gap: 30px;
    margin-top: 0;
  }
  
  .eyeliner-landing__benefits-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 10px;
  }
  
  .eyeliner-landing__benefits-image {
    width: 100%;
    height: auto;
    border-radius: 4px;
    overflow: hidden;
  }
}

  
</style>

<div class="eyeliner-landing">
  <div class="eyeliner-landing__hero">
    {% if section.settings.hero_image != blank %}
      <img src="{{ section.settings.hero_image | img_url: '600x' }}" alt="{{ section.settings.hero_image.alt | escape }}" class="eyeliner-landing__hero-image">
    {% endif %}
    
    <div class="eyeliner-landing__content">
      <h1 class="eyeliner-landing__title">
        {{ section.settings.main_title | replace: 'après 50 ans ?', '<span class="eyeliner-landing__highlight">après 50 ans ?</span>' }}
      </h1>

      <p class="eyeliner-landing__intro">
        {{ section.settings.intro_text }}
      </p>

      {% if section.settings.product_image != blank %}
        <img src="{{ section.settings.product_image | img_url: '600x' }}" alt="{{ section.settings.product_image.alt | escape }}" class="eyeliner-landing__product-image">
      {% endif %}
    </div>
  </div>

  <h2 class="eyeliner-landing__subtitle">{{ section.settings.secondary_title }}</h2>

  <div class="eyeliner-landing__benefits-container">
    <div class="eyeliner-landing__benefits">
      {% for block in section.blocks %}
        {% if block.type == 'benefit' %}
          <div class="eyeliner-landing__benefit">
            <div class="eyeliner-landing__benefit-icon">
              {% if block.settings.icon != blank %}
                {{ block.settings.icon | img_url: '80x' | img_tag: block.settings.title }}
              {% endif %}
            </div>
            <div>
              <h3 class="eyeliner-landing__benefit-title">{{ block.settings.title }}</h3>
              <p class="eyeliner-landing__benefit-text">{{ block.settings.description }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    
    {% if section.settings.benefits_image != blank %}
      <img src="{{ section.settings.benefits_image | img_url: '600x' }}" alt="{{ section.settings.benefits_image.alt | escape }}" class="eyeliner-landing__benefits-image">
    {% endif %}
    
  </div>
</div>

{% schema %}
{
  "name": "Solution LUMA",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Titre principal",
      "default": "Pourquoi 90% des eyeliners classiques ne conviennent plus après 50 ans après 50 ans ?"
    },
    {
      "type": "textarea",
      "id": "intro_text",
      "label": "Texte d'introduction",
      "default": "Après 50 ans, votre peau change... mais pas les eyeliners ! Conçus pour des paupières lisses, ils tirent sur la peau fragile, marquent les ridules et disparaissent en quelques heures. Il est temps d'adopter un eyeliner pensé pour vous."
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Image du produit"
    },
{
  "type": "image_picker",
  "id": "hero_image",
  "label": "Image principale (gauche)"
},
{
  "type": "image_picker",
  "id": "benefits_image",
  "label": "Image des bénéfices (droite)"
},
    {
      "type": "text",
      "id": "secondary_title",
      "label": "Titre secondaire",
      "default": "Enfin, un eyeliner pensé pour Vous !"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Bénéfice",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icône"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titre",
          "default": "Titre du bénéfice"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Description du bénéfice"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Eyeliner Landing",
      "category": "Product"
    }
  ]
}
{% endschema %}

