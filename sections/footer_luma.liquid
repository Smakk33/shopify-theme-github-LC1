<div class="section-{{ section.id }} footer-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      {% for block in section.blocks %}
        {% if block.type == "logo" %}
          <div class="footer-logo-{{ block.id }}">
            {% if block.settings.logo != blank %}
              <a href="{{ shop.url }}" class="footer-logo-image-{{ block.id }}">
                <img src="{{ block.settings.logo | image_url }}" alt="{{ block.settings.logo.alt }}" {% if lazy %}loading="lazy"{% endif %}>
              </a>
            {% endif %}
            {% if block.settings.text != blank %}
              <a href="{{ shop.url }}" class="footer-logo-text-{{ block.id }}">{{ block.settings.text }}</a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}

      <div class="footer-body-{{ section.id }}">
        <div class="footer-left-{{ section.id }}">
          {% if text != blank %}
            <div class="footer-text-{{ section.id }}">
              {{ text }}
            </div>
          {% endif %}
          {% if use_newsletter %}
            {% form 'customer', class: 'footer-newsletter-form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">
  
              <div class="footer-newsletter-row-{{ section.id }}">
                <input
                  type="email"
                  name="contact[email]"
                  class="footer-newsletter-input-{{ section.id }}"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="Newsletter-error--{{ section.id }}"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="Newsletter-success--{{ section.id }}"
                  {% endif %}
                  placeholder="{{ input_placeholder }}"
                  required
                >
                <button type="submit" class="footer-newsletter-submit-{{ section.id }}" name="commit">
                  {{ submit }}
                </button>
              </div>
            {% endform %}
          {% endif %}

          {% if privacy_text != blank %}
            <div class="footer-privacy-text-{{ section.id }}">
              {{ privacy_text }}
            </div>
          {% endif %}
        </div>

        <div class="footer-right-{{ section.id }}">
          {% for block in section.blocks %}
            {% if block.type == "column" %}
              <div class="footer-column-{{ section.id }}">
                {% if block.settings.heading != blank %}
                  <p class="footer-column-heading-{{ section.id }}">{{ block.settings.heading }}</p>
                {% endif %}

                {% if block.settings.menu != blank %}
                  <ul class="footer-menu-list-{{ section.id }}">
