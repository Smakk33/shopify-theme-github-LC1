<style>
  .section.article-eyeliner-section-P1 {
    --context-section-spacing-inline: 0 !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    margin-left: 0 !important;
    margin-right: 0 !important;
  }

  @font-face {
    font-family: 'Bodoni MT';
    src: url('{{ "BodoniMT.woff2" | asset_url }}') format('woff2');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .luma-article-P1 {
    max-width: 600px;
    margin: 0 auto;
    font-family: 'Poppins', sans-serif;
    color: #342C40;
    padding: 0;
    overflow: hidden;
  }

  .luma-header-P1 {
    background-color: white;
    padding: 15px 20px;
    text-align: center; 
  }

  .luma-logo-P1 {
    font-family: 'Bodoni MT', serif;
    font-size: 40px;
    font-weight: normal;
    margin: 0;
    letter-spacing: 0;
    color: #342C40;
  }

  .luma-content-P1 {
    position: relative;
    padding: 20px;
    overflow: hidden;
    z-index: 1;
  }

  .luma-background-P1 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100% !important;
    height: 85% !important;
    background-color: #FEDDFF !important;
    z-index: 0 !important;
  }

  .luma-title-P1, .luma-subtitle-P1, .luma-text-P1, .luma-image-P1 {
    position: relative;
    z-index: 2;
  }

  .luma-title-P1 {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    font-size: 30px;
    line-height: 31px;
    letter-spacing: 0;
    text-align: center;
    margin: 10px 0 20px;
    color: #342C40;
    text-transform: uppercase;
  }

  .luma-subtitle-P1 {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    font-size: 17px;
    line-height: 22px;
    letter-spacing: 0;
    text-align: left;
    margin-bottom: 20px;
    color: #342C40;
  }

  .luma-text-P1 {
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 16px;
    letter-spacing: 0;
    margin-bottom: 20px;
    color: #342C40;
  }

  .luma-text-P1 p {
    margin-bottom: 15px;
    line-height: 16px;
  }

  .luma-text-P1 strong {
    font-weight: 600;
  }

  .luma-image-P1 {
    width: 100%;
    height: auto;
    border: 2px solid #342C40;
    display: block;
    margin-top: 10px;
  }

.eyeliner-guarantee-container {
    display: none; 
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 100%;
    margin-top: 10px;
  }

  .eyeliner-guarantee {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
  }

  .eyeliner-guarantee img {
    flex-shrink: 0;
    margin-right: 5px;
    width: 15px;
    height: 15px;
  }

  .eyeliner-guarantee span {
    font-size: 12px;
    line-height: 1.1;
  }

  @media screen and (max-width: 1023px) {
    .eyeliner-guarantee-container {
      display: flex; 
    }
  }

  @media screen and (max-width: 385px) {
    .eyeliner-guarantee span {
      font-size: 12px;
    }
  }

  /* By default, show mobile version and hide desktop version */
  .luma-desktop-version {
    display: none;
  }
  
  .luma-mobile-version {
    display: block;
  }

  /* Desktop version - only applies to screens 1000px and larger */
  @media screen and (min-width: 1000px) {
    /* Hide mobile version */
    .luma-mobile-version {
      display: none;
    }
    
    /* Show desktop version */
    .luma-desktop-version {
      display: block;
    }
    
    /* Desktop styles */
    .luma-desktop-article {
      width: 100%;
      max-width: 100%;
      margin: 0;
      font-family: 'Poppins', sans-serif;
      color: #342C40;
      overflow: hidden;
    }
    
    .luma-desktop-header {
      background-color: white;
      padding: 20px;
      text-align: center;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .luma-desktop-logo {
      font-family: 'Bodoni MT', serif;
      font-size: 64px;
      font-weight: normal;
      margin: 0;
      letter-spacing: 0;
      color: #342C40;
    }
    
 .luma-desktop-content {
  position: relative;
  display: flex;
  padding: 40px;
  overflow: hidden;
  align-items: center;
}
    
    .luma-desktop-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #FEDDFF;
      z-index: 0;
    }
    
 .luma-desktop-text {
  position: relative;
  z-index: 1;
  width: 50%;
  padding-right: 40px;
  padding-left: 50px;

}
    
    .luma-desktop-title {
      font-family: 'Poppins', sans-serif;
      font-weight: 700;
      font-size: 40px;
      line-height: 46px;
      letter-spacing: 0;
      text-align: left;
      margin: 0 0 20px;
      color: #342C40;
      text-transform: uppercase;
    }
    
    .luma-desktop-subtitle {
      font-family: 'Poppins', sans-serif;
      font-weight: 700;
      font-size: 20px;
      line-height: 22px;
      letter-spacing: 0;
      text-align: left;
      margin-bottom: 20px;
      color: #342C40;
    }
    
    .luma-desktop-paragraph {
      font-family: 'Poppins', sans-serif;
      font-weight: 400;
      font-size: 20px;
      line-height: 21px;
      letter-spacing: 0;
      margin-bottom: 20px;
      color: #342C40;
    }
    
    .luma-desktop-paragraph p {
      margin-bottom: 15px;
      line-height: 21px;
    }
    
    .luma-desktop-paragraph strong {
      font-weight: 600;
    }
    
    .luma-desktop-image-container {
      position: relative;
      z-index: 1;
      width: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .luma-desktop-image {
      width: 100%;
      max-width: 400px;
      height: auto;
      border: 3px solid #342C40;
      display: block;
    }
  }

 @media screen and (min-width: 1231px) {
.luma-desktop-image {
      width: 100%;
      max-width: 500px;
      height: auto;
      border: 3px solid #342C40;
      display: block;
    }
   
}

  
</style>

<!-- Mobile Version (Original) -->
