    font-size: 14px;
    color: #666;
  }
  
  .eyeliner-guarantee-container {
    display: flex;
    justify-content: center;
    margin-top: 10px;
  }
  
  .eyeliner-guarantee {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: #342C40;
  }
  
  /* Masquer l'image du produit sur mobile */
  .product-image-container-P5 {
    display: none;
  }
  
  /* Styles pour la version desktop */
  @media screen and (min-width: 768px) {
    .benefits-title-P5 {
      font-size: 40px;
      line-height: 47px;
      margin-bottom: 40px;
    }
    
    .benefits-container-P5 {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 30px;
      margin-bottom: 30px;
    }
    
    .benefits-list-P5 {
      width: 55%;
    }
    
    .benefit-icon-P5 {
      width: 40px;
      height: 40px;
    }
    
    .benefit-text-P5 {
      font-size: 18px;
      line-height: 20px;
    }
    
    
    .product-image-container-P5 {
      display: block;
      width: 45%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .product-image-P5 {
      max-width: 100%;
      height: auto;
      border: 3px solid #342C40;
    }
    
    .cta-container-P5 {
      max-width: 600px;
      margin: 0 auto;
    }


  .cta-wrapper-P5 {
    display: none !important;
  }
    
  }
  
  @media screen and (max-width: 768px) {
    .badge-container-P5 {
      display: none;
    }
    
    .cta-wrapper-P5 {
      flex-direction: row;
      align-items: center;
    }
    
    .cta-text-P5 {
      text-align: left;
    }
    
    .cta-badge-P5 {
      width: 100px;
    }
  }
</style>

