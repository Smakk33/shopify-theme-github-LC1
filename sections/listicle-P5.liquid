  }
  
  .atc-button-P5 {
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    font-size: 20px;
    color: white;
    background-color: {{ section.settings.button_color }};
    width: 290px;
    height: 55px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    border-radius: 14px;
    margin-top: 20px;
  }
  
  .guarantee-text-P5 {
