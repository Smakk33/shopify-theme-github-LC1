<div class="product-benefits-section-P5">
  <h2 class="benefits-title-P5">{{ section.settings.title }}</h2>
  
  <div class="benefits-container-P5">
    <div class="benefits-list-P5">
      {% for block in section.blocks %}
        {% if block.type == 'benefit' %}
          <div class="benefit-item-P5">
            <img src="{{ section.settings.icon_image | img_url: 'master' }}" alt="" class="benefit-icon-P5">
            <p class="benefit-text-P5">{{ block.settings.benefit_text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="product-image-container-P5">
      <img src="https://cdn.shopify.com/s/files/1/0924/0848/0091/files/REVIEWS_CREA.webp?v=1742037854" alt="Avis client Luma Linea" class="product-image-P5">
    </div>
  </div>
  
  <div class="cta-container-P5">
    <div class="cta-wrapper-P5">
      <p class="cta-text-P5">
        <span class="bold-text-P5">{{ section.settings.bold_text }}</span> {{ section.settings.cta_text }}
      </p>
      <img src="{{ section.settings.badge_image | img_url: 'master' }}" alt="{{ section.settings.badge_alt }}" class="cta-badge-P5">
    </div>
    
    <a href="{{ section.settings.button_link }}" class="atc-button-P5">
      {{ section.settings.button_text }}
    </a>
    <div class="eyeliner-guarantee-container">
      <div class="eyeliner-guarantee">
        <img src="https://cdn.shopify.com/s/files/1/0924/0848/0091/files/7823496.webp?v=1740324757" alt="Guarantee icon" width="15" height="15">
        <span>GARANTIE DE REMBOURSEMENT DE 60 JOURS</span>
      </div>
    </div>
  </div>
</div>

<style>
  .product-benefits-section-P5 {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2px 16px;
    position: relative;
  }
  
  .benefits-title-P5 {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    font-size: 24px;
    line-height: 31px;
    text-align: center;
    margin-bottom: 32px;
    margin-top: 20px;
  }
  
  .benefits-container-P5 {
    position: relative;
    margin-bottom: 15px;
  }
  
  .benefits-list-P5 {
