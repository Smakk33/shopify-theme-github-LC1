<div id="bundleSelector" class="bundle-selector">
  <div class="bundle-options">
    <div class="bundle-options-row">
      <div class="bundle-option" data-bottles="1">
        <img src="https://cdn.shopify.com/s/files/1/0924/0848/0091/files/PROD-PNG.webp?v=1740241942" alt="LUMA LINEA Eyeliner" class="bdselect-image" />
        <div class="bundle-title">1X LUMA LINEA</div>
        <p><span class="price">{{ 22.95 | minus: 1 | plus: 1 | round: 2 }}€</span></p>
        <select class="variant-css" class="variant-selector" data-bundle="1">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}" data-image="{{ variant.image | img_url: '100x100' }}">
              {{ variant.title }}
            </option>
          {% endfor %}
        </select>
      </div>
      <div class="bundle-option" data-bottles="2">
        <img src="https://cdn.shopify.com/s/files/1/0924/0848/0091/files/PROD-PNG.webp?v=1740241942" alt="LUMA LINEA Eyeliner" class="bdselect-image" />
        <div class="most-popular-badge">
          +1 OFFERT
        </div>
        <div class="bundle-title">2X LUMA LINEA</div>
        <p><span class="price">{{ 45.95 | minus: 2 | plus: 1 | round: 2 }}€</span></p>
        <div class="variant-selectors">
          {% for i in (1..3) %}
            <select class="variant-selector" data-bundle="2" data-index="{{ i }}">
              {% for variant in product.variants %}
                <option value="{{ variant.id }}" data-image="{{ variant.image | img_url: '100x100' }}">
                  {{ variant.title }}
                </option>
              {% endfor %}
            </select>
          {% endfor %}
        </div>
      </div>
    </div>
